using System;

namespace Házi_feladat.barta.oliver
{
    public class Program
    {
        public static int[] tomb;
        public static int tb;
        static void Main(string[] args)
        {
            Console.WriteLine("Mekkora legyen a tömb hossza?");
            tb = Convert.ToInt32(Console.ReadLine());
            tomb = new int[tb];
            for (int i = 0; i < tomb.Length; i++)
            {
                _ = new first();
                tomb[i] = first.veletlenszeru;
            }
            
            Console.WriteLine("Elrendezetlen tömb:");
            for (int i = 0; i < tb; i++)
            {
                Console.Write(tomb[i] + " ");
            }
            Console.WriteLine();
            second.Rend();
            Console.WriteLine("Elrendezett tömb:");
            for (int i = 0; i < tb; i++)
            {
                Console.Write(tomb[i] + " ");

            }
            Console.WriteLine();
            Console.ReadKey();
        }
    }
}
